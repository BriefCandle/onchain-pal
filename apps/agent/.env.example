# ===========================================
# OnchainPal Agent Configuration
# ===========================================

# AI Model Configuration
AIMO_API_KEY=your_aimo_api_key
AIMO_BASE_URL=https://api.aimo.network/v1
AIMO_USE_PRODUCTION=false

# ===========================================
# ChaosChain Configuration
# ===========================================

# Network (currently using Base Sepolia)
CHAOSCHAIN_NETWORK=base-sepolia

# ===========================================
# 0G Storage Configuration
# ===========================================

# 0G Galileo testnet storage
ZG_STORAGE_NETWORK=0g-galileo
ZG_INDEXER_RPC=https://indexer-storage-testnet-standard.0g.ai
ZG_EVM_RPC=https://evmrpc-testnet.0g.ai/

# ===========================================
# Admin Wallet
# ===========================================

# Private key for the admin wallet (used for CDP operations and 0G storage fees)
# This wallet should be funded on the target network
# IMPORTANT: Never commit this to version control!
ADMIN_PRIVATE_KEY=0x...

# ===========================================
# Debugging
# ===========================================

# Enable verbose ChaosChain debug logging (true/false)
# Shows detailed SDK config, metadata, timing info
CHAOSCHAIN_DEBUG=true

# Log flush threshold - number of agent logs to buffer before flushing to 0G
# Lower values = more frequent storage writes (useful for testing)
AGENT_LOG_FLUSH_THRESHOLD=100
